{
  "name": "static-site",
  "version": "0.1.0",
  "description": "A simple setup for creating a static site",
  "main": "index.js",
  "scripts": {
    "env_prod": "ENV=prod node ./bin/env.js",
    "env_dev": "ENV=dev node ./bin/env.js",
    "start": "npm run env_prod && npm run bundle && NODE_ENV=production node ./server",
    "dev": "npm run env_dev && nodemon --watch server --ignore server/config/config.json --watch webpack --exec node ./server",
    "bundle": "node node_modules/.bin/webpack -p --progress --config ./webpack/webpack.config.prod.js"
  },
  "dependencies": {
    "bootstrap": "4.0.0-alpha.6",
    "promise-polyfill": "^7.1.2",
    "ssg-node-express": "4.16.3",
    "webpack-plugin-replace": "^1.1.1"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-eslint": "6.1.2",
    "babel-loader": "7.1.4",
    "babel-plugin-lodash": "3.3.2",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-stage-1": "6.5.0",
    "clean-webpack-plugin": "0.1.10",
    "copy-webpack-plugin": "4.5.1",
    "css-loader": "0.23.1",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "fs-extra": "^6.0.0",
    "html-loader": "0.4.3",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "2.0.0",
    "json-loader": "0.5.4",
    "lodash-webpack-plugin": "^0.11.5",
    "node-sass": "^4.8.3",
    "postcss-loader": "2.1.2",
    "sass-loader": "6.0.7",
    "style-loader": "0.13.1",
    "webpack": "4.4.1",
    "webpack-cli": "2.0.13",
    "webpack-dev-middleware": "3.1.0",
    "webpack-hot-middleware": "2.21.2"
  }
}
